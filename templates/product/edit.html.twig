{% extends "base.html.twig" %}

{% block title %}Modifier{% endblock %}

{% block body %}
    <h1>Mofifier l'article: {{ product.name }}</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
            {{ form_row(form.price) }}
        </div>
         <div class="col ">
            {{ form_row(form.mainPicture )}}
            {{ form_row(form.category) }}
            {{ form_row(form.shortDescription) }}
        </div>
    </div>
    <hr>

    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Modifier le produit</button>

    {{ form_end(form) }}
{% endblock %}